{
  "trailingComma": "es5",
  "endOfLine": "lf",
  "printWidth": 100,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": "*.css",
      "options": {
        "singleQuote": false
      }
    }
  ],
  "importOrder": [
    "^react(.*)",
    "next(.*)",
    "<THIRD_PARTY_MODULES>",
    "@/packages/components/(.*)",
    "@/packages/hooks/(.*)",
    "@/packages/utils/(.*)",
    "@/@types/(.*)",
    "@/styles/(.*)",
    "^@/(.*)",
    "^[./]"
  ]
}
